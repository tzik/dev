#!/bin/bash
set -e
cd "$(dirname "$0")/.."

mkdir -p out/{lib,include{,/c++/v1}}
cp build/wasm.ll out/lib

cp -r build/musl/include/* out/include
cp -r src/musl/include/* out/include
cp -r src/musl/arch/generic/* out/include
cp -r src/arch/wasm32/* out/include

cp -r src/libunwind/include/* out/include
cp -r src/compiler-rt/include/* out/include
cp -r src/libcxxabi/include/* out/include/c++/v1
cp -r src/libcxx/include/* out/include/c++/v1
