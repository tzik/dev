#!/bin/bash
source "$(dirname "$0")/package.sh"

export PATH="${prefix}/bin:/usr/bin:/usr/sbin:/bin:/sbin"

if ! [ -x "${prefix}/bin/cc" ]; then
  export bootstrap=1
  {
    ./bin/clobber
    ./bin/configure
    ./bin/build
    ./bin/pack
    ./bin/unmerge
    ./bin/merge
  } 2>&1 | tee log
fi

export bootstrap=
{
  ./bin/clobber
  ./bin/configure
  ./bin/build
  ./bin/pack
  ./bin/unmerge
  ./bin/merge
} 2>&1 | tee log
