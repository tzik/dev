#!/bin/bash
set -eu

cd "$(dirname "$0")/.."

pkgs=(
  "ccache"
  "patchelf"
  "ninja"
  "cmake"
  "llvm"
  "v8"
  "binaryen"
  "wabt"
)

for i in "${pkgs[@]}"; do
  tar="pkg/${i}/${i}.tar"
  gsutil cp \
    "gs://storage.tzik.jp/toolchain/latest/${i}.tar.xz" \
    "${tar}.xz"
  unxz "${tar}.xz"
done
