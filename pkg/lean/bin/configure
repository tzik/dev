#!/bin/bash
source "$(dirname "$0")/package.sh"

declare -a flags
cmake_dir="${src_dir}/src"

flags+=(
  "-GNinja"
  # "-DCMAKE_BUILD_TYPE=Debug"
  "-DCMAKE_BUILD_TYPE=Release"
  "-DCMAKE_INSTALL_PREFIX=${prefix}"
  "-DCMAKE_INSTALL_LIBDIR=lib"
)

cd "${build_dir}"
cmake "${flags[@]}" "${cmake_dir}"
